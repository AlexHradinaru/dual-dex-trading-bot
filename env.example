# =============================================================================
# DUAL DEX TRADING BOT ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# This configuration supports both Lighter Protocol and Pacifica Finance

# =============================================================================
# LIGHTER PROTOCOL CONFIGURATION
# =============================================================================
# Your Lighter API private key (hex format)
LIGHTER_API_KEY_PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# Lighter account and API key indices
LIGHTER_ACCOUNT_INDEX=1
LIGHTER_API_KEY_INDEX=0

# =============================================================================
# PACIFICA FINANCE CONFIGURATION
# =============================================================================
# Your Solana wallet private key (base58 encoded)
PACIFICA_PRIVATE_KEY=your_base58_encoded_private_key_here

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Account balance for percentage calculations (USD)
ACCOUNT_BALANCE=500.0

# Position sizing as percentage of account balance
MIN_POSITION_PERCENT=50.0
MAX_POSITION_PERCENT=80.0

# Position hold time in minutes (dynamic range)
MIN_POSITION_HOLD_MINUTES=2
MAX_POSITION_HOLD_MINUTES=5
# Legacy support - if POSITION_HOLD_MINUTES is set, use it as both min and max
# POSITION_HOLD_MINUTES=5

# Wait time between trading cycles (seconds)
MIN_WAIT_BETWEEN_CYCLES=30
MAX_WAIT_BETWEEN_CYCLES=120

# Trading intervals (seconds)
MIN_TRADE_INTERVAL=30
MAX_TRADE_INTERVAL=300

# Risk management
MAX_DAILY_TRADES=50
ENABLE_RISK_LIMITS=true

# =============================================================================
# LEVERAGE CONFIGURATION
# =============================================================================
# Manual leverage settings per pair (leverage multiplier)
LEVERAGE_BTC=5.0
LEVERAGE_ETH=5.0
LEVERAGE_HYPE=5.0
LEVERAGE_SOL=5.0
LEVERAGE_BNB=5.0

# Margin mode (0 = cross, 1 = isolated)
MARGIN_MODE=0

# =============================================================================
# PROXY CONFIGURATION (MANDATORY)
# =============================================================================
# Proxy is REQUIRED for this bot - always set to true
USE_PROXY=true

# REQUIRED: Proxy URL with authentication
# Format: http://username:password@host:port
PROXY_URL=http://username:password@proxy.example.com:8080

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_FILE=dual_dex_bot.log

# =============================================================================
# MARKET CONFIGURATION
# =============================================================================
# Trading pairs to use (comma-separated)
ALLOWED_TRADING_PAIRS=BTC,ETH,HYPE,SOL,BNB

# Default slippage percentage
DEFAULT_SLIPPAGE=0.01

# Order timeout (seconds)
ORDER_TIMEOUT=30

# =============================================================================
# POSITION VERIFICATION SETTINGS
# =============================================================================
POSITION_VERIFICATION_RETRIES=3
POSITION_VERIFICATION_DELAY=5

# Startup configuration
CLOSE_EXISTING_POSITIONS_ON_START=true

# =============================================================================
# EXAMPLE VALUES (REPLACE WITH YOUR ACTUAL VALUES)
# =============================================================================
# LIGHTER_API_KEY_PRIVATE_KEY=0xabcdef1234567890abcdef1234567890abcdef1234567890abcdef1234567890
# PACIFICA_PRIVATE_KEY=5Kb8kLf9zgWQnogidDA76MzPL6TsVY1x5WZ4krkFCgsoTh2S5uz
# PROXY_URL=http://myuser:mypass@myproxy.com:8080
