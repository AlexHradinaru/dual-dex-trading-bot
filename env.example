# MIN_POSITION_PERCENT=30.0
# MAX_POSITION_PERCENT=70.0
# POSITION_HOLD_MINUTES=3
# ALLOWED_TRADING_PAIRS=BTC,ETH
# LEVERAGE_BTC=3.0
# LEVERAGE_ETH=3.0
